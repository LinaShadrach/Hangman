<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>HangMan</title>
  </head>
  <body>
    <h1>Hangman</h1>
    <h4>You have @Model.GetGuessesLeft() guesses left</h4>
    <p>Letters guessed:</p>
    @foreach(string letter in Model.GetLettersGuessed()){
      <h5>@letter</h5>
    }
    <p>@Model.GetBlankString()</p>
    <form action="/" method="post">
      <label for="letter">Guess a letter.</label>
      <input type="text" name="letter" placeholder="letter">
      <button type="submit" name="button">Guess</button>
    </form>
  </body>
</html>
